# Gemfile

source "https://rubygems.org"

# GitHub Pages 默认依赖（会自动锁定 Jekyll 版本）
gem "github-pages", group: :jekyll_plugins

# Minimal Mistakes 主题
gem "minimal-mistakes-jekyll"

# Windows 平台需要的依赖
gem "tzinfo-data"
gem "wdm", ">= 0.1.2", "< 1.0", platforms: [:mingw, :mswin]

# Jekyll 插件
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jemoji"
  gem "jekyll-include-cache"
end



